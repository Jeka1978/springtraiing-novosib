<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:quotes.properties"/>

    <bean class="quoters.bpp.BeanDefinitionAnalyzerBeanFactoryPostProcessor"/>
    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

    <bean class="quoters.bpp.InjectRandomAnnotationBeanPostProcessor"/>
    <bean id="s" class="java.lang.String">
        <constructor-arg value="Trust me"/>
    </bean>
    <bean id="shakespear" class="quoters.Shakespear">
        <property name="message" value="${shake}"/>
    </bean>

    <bean id="terminator" class="quoters.Terminator" scope="prototype">
        <property name="messages">
            <list>
                <value>I'll be back</value>
                <ref bean="s"/>
                <value>Astalavista baby</value>
            </list>
        </property>
    </bean>
    <bean id="talkingRobot" class="quoters.TalkingRobotImpl">
        <constructor-arg value="12" name="x"/>
        <property name="quoters">
            <list>
                <ref bean="shakespear"/>
                <ref bean="terminator"/>
            </list>
        </property>
    </bean>


</beans>